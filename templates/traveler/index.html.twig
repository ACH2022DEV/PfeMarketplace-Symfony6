{% extends 'base.html.twig' %}

{% block title %}Traveler index{% endblock %}

{% block body %}
    <h1>Traveler index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for traveler in travelers %}
            <tr>
                <td>{{ traveler.id }}</td>
                <td>{{ traveler.firstName }}</td>
                <td>{{ traveler.lastName }}</td>
                <td>{{ traveler.address }}</td>
                <td>
                    <a href="{{ path('app_traveler_show', {'id': traveler.id}) }}">show</a>
                    <a href="{{ path('app_traveler_edit', {'id': traveler.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_traveler_new') }}">Create new</a>
{% endblock %}
