{% extends 'admin/base_admin.html.twig' %}

{% block title %}{% endblock %}

{% block container %}
    <div class="card container shadow mt-5" >
        <div>
            <a href="{{ path('app_product_type_new') }}" class="btn btn-sm btn-success" style="position: relative; top: 100px; left: 20px">
                <i class="fas fa-plus-circle m-1">  Create new</i>
            </a>

            <div class="card-tools text-center">
                <h1 class="card-title fs-4 font-italic" style="font-weight: bold;"><ins>List of product types</ins></h1>

            </div>
        </div>
        <div class="card-body table-responsive p-3 text-center">
            <table class="table"  data-search= "true"
                   data-toggle="table"  data-pagination="true" data-page-size="10"
                   data-show-pagination-switch="true" data-show-columns="true">
                <thead>
                <tr>
                    <th class="th-sm">ID</th>
                    <th class="th-sm">Nom</th>
                    <th class="th-sm">Actions</th>
                </tr>
                </thead>
                <tbody data-reload-content-target="myOneCustomContent">
                {{ include('product_type/_liste.html.twig') }}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}




