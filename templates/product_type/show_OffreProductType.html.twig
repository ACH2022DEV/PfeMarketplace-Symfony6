{% extends "base.html.twig" %}

{% block title %} Product Types - Offer {% endblock %}

{% block body %}

    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10">
                <div class="card shadow-sm">
                    <h5 class="card-header bg-info text-white"> Product Type Details </h5>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-striped table-hover mb-0">
                                <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Max Items</th>
                                    <th scope="col">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for offerProductType in productType.offerProductTypes %}
                                    <tr>
                                        <td>{{ offerProductType.id }}</td>
                                        <td>{{ offerProductType.price }}</td>
                                        <td>{{ offerProductType.maxItems }}</td>
                                        <td>
                                            <a href="{{ path('app_offer_product_edit', {'id': offerProductType.id}) }}" class="btn btn-sm btn-dark me-2">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_offer_product_edit', {'id': offerProductType.id}) }}" class="btn btn-sm btn-primary me-2">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="{{ path('app_offer_product_delete', {'id': offerProductType.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product type?');">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a href="{{ path('app_offer_product_new') }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus"></i> Create new
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
