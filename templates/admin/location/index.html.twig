{% extends 'admin/base_admin.html.twig' %}

{% block title %}Location Parameters{% endblock %}

{% block pagetitle %}Localisation{% endblock %}

{% block container %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <ul class="nav nav-pills navtab-bg nav-justified">
                        <li class="nav-item">
                            <a href="#tab_continent" data-bs-toggle="tab" aria-expanded="false"
                               class="nav-link active">
                                Liste des continents
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#tab_country" data-bs-toggle="tab" aria-expanded="true"
                               class="nav-link">
                                Liste des pays
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#tab_city" data-bs-toggle="tab" aria-expanded="true"
                               class="nav-link">
                                Liste des villes
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane show active" id="tab_continent">
                            {{ render(path('app_admin_location_continent_index')) }}
                        </div>
                        <div class="tab-pane" id="tab_country">
                            {{ render(path('app_admin_location_country_index')) }}
                        </div>
                        <div class="tab-pane" id="tab_city">
                            {{ render(path('app_admin_location_city_index')) }}
                        </div>
                    </div>

                </div>
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>

{% endblock %}
