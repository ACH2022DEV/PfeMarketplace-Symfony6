{% extends 'base.html.twig' %}

{% block title %}Currency{% endblock %}

{% block body %}
    <h1>Currency</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ currency.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ currency.name }}</td>
            </tr>
            <tr>
                <th>Symbol</th>
                <td>{{ currency.symbol }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_currency_currency_index') }}">back to list</a>

    <a href="{{ path('app_admin_currency_currency_edit', {'code': currency.code}) }}">edit</a>

    {{ include('admin/currency/currency/_delete_form.html.twig') }}
{% endblock %}
