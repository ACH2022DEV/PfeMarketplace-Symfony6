{% extends 'admin/base_admin.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block container %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ app.user.displayName }}! âœ…</h1>

    {% if(app.user.person)  %}
        <ul>
            <li>Profile : {{  app.user.person.profile.name }} </li>
            <li>Email : {{  app.user.email }} </li>
            <li>Full name : {{  app.user.person.firstname }} {{  app.user.person.lastname }}  </li>
            <li>Birthdate : {{  app.user.person.birthdate | date("m/d/Y") }}  </li>
        </ul>
    {% endif %}

</div>
{% endblock %}
