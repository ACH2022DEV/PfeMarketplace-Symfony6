{#{% extends 'base.html.twig' %}#}
{% extends 'seller/base_seller.html.twig' %}

{% block title %}Login{% endblock %}
{#{% block header  %} {% include 'front/header.html.twig' %}{% endblock %}#}
{% block container %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}
    <section id="common_author_area " class="section_padding ">
        <div class="container ">
            <div class="row my-5">
                <div class="col-lg-8 offset-lg-2 ">
                    <div class="common_author_boxed rounded-4">
                        <div class="common_author_heading">
                            <h3>Login your account</h3>
                            <h2>Logged in to stay in touch</h2>
                        </div>
                        <div class="common_author_form">
                            <form method="post" action="{{ path('app_login') }}" >
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                {# {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a
                                            href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}#}
                                <div class="form-group">
                                    {#                                <input type="text" class="form-control" placeholder="Enter user name" />#}
                                    <label for="inputEmail" class="form-label text-dark">Email address</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                           class="form-control" placeholder="Enter your email" autocomplete="email"
                                           required autofocus>
                                </div>
                                <div class="form-group mt-2">
                                    <label for="inputPassword" class="form-label text-dark">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control"
                                           placeholder="Enter your password" autocomplete="current-password"
                                           required>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                    {#                                <a href="forgot-password.html">Forgot password?</a>#}
                                </div>
                                <div class="common_form_submit">
                                    <button class="btn btn_theme btn_md" type="submit">Log in</button>
                                </div>
                                <div class="have_acount_area">
                                    <p>Dont have an account? <a href="{{ path('app_market_subscription_request_new') }}">Subscription request</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
